node{
   stage('SCM Checkout'){
     git 'https://github.com/kumarsandeep590/mytest/'
   }
   stage('Compile-Package'){
      // Get maven home path
      sh 'mvn package'
   }
   stage('Deploy to Tomcat'){
      
      sshagent(['tomcat-dev']) {
         sh 'scp -o StrictHostKeyChecking=no target/*.war sandeep@15.206.66.15:/opt/tomcat/latest/webapps'
      }
   }
}
